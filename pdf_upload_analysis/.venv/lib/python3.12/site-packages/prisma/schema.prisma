generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = -1 // Enables recursive types
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Your MongoDB connection string
}

model Report {
  id             String   @id @default(cuid()) @map("_id")
  title          String
  content        String
  date           DateTime // Ensure this field is of type DateTime
  filePath       String
  analysisResult Json
  summary        String
  userId         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
